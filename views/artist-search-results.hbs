<section class="container">
    {{#each artistList}}
        <div class="card">
            {{#if images.0.url}}
                <img src="{{images.0.url}}" alt="{{name}}" />
                {{else}}
                <img src="/images/spotify-icon-white.png" alt="{{name}}"/>
            {{/if}}
            <p>{{name}}</p>
            <a class="searchBttn" href="/albums/{{id}}">View Albums</a>
        </div>
    {{/each}}
</section>
